<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>
    <ul>
        <div class="container">
            <!-- Link to add a new category -->
            <a href="/categories/new">Add a new category</a>
            <a href="/">Back to home </a>
        </div>
        
        <% categories.forEach((category) => { %>
            <li>
                <strong><%= category.name %></strong>:
                <%= category.description %>
                <a href="/categories/<%= category.id %>/items">View items in this category</a>
                <!-- Link to update the category -->
                <a href="/categories/<%= category.id %>/edit">Update this category</a>
                <!-- Delete form -->
                <form method="POST" action="/categories/<%= category.id %>/delete" style="display:inline;">
                    <button type="submit" onclick="return confirm('Are you sure you want to delete this category?')">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>
